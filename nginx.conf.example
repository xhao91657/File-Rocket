# Nginx 配置示例 - File-Rocket 性能优化
# 适用于 500Mbps 带宽的服务器

server {
    listen 80;
    server_name file-rocket.top www.file-rocket.top;
    
    # 强制 HTTPS（如果已配置 SSL）
    # return 301 https://$server_name$request_uri;
    
    # 或者直接配置 HTTP
    location / {
        proxy_pass http://localhost:3000;
        
        # ===== 性能优化配置 =====
        
        # 1. 增加客户端请求体大小限制（支持大文件上传）
        client_max_body_size 10G;
        
        # 2. 增加缓冲区大小（提升大文件传输性能）
        client_body_buffer_size 128M;
        proxy_buffer_size 128k;
        proxy_buffers 16 128k;
        proxy_busy_buffers_size 256k;
        
        # 3. 增加超时时间（支持大文件传输）
        client_body_timeout 600s;
        proxy_connect_timeout 600s;
        proxy_send_timeout 600s;
        proxy_read_timeout 600s;
        send_timeout 600s;
        
        # 4. 禁用请求缓冲（流式传输）
        proxy_request_buffering off;
        
        # 5. 启用 TCP 优化
        tcp_nodelay on;
        tcp_nopush on;
        
        # 6. 设置代理头
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # 7. WebSocket 支持（Socket.IO）
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        
        # 8. 禁用缓存（确保实时数据）
        proxy_cache_bypass $http_upgrade;
        add_header Cache-Control "no-cache, no-store, must-revalidate";
        add_header Pragma "no-cache";
        add_header Expires "0";
    }
    
    # 静态文件优化（如果需要 Nginx 直接服务静态文件）
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
        proxy_pass http://localhost:3000;
        expires 1d;
        add_header Cache-Control "public, immutable";
        tcp_nodelay on;
        tcp_nopush on;
    }
    
    # 健康检查
    location /health {
        proxy_pass http://localhost:3000/health;
        access_log off;
    }
}

# HTTPS 配置示例（如果已配置 SSL）
server {
    listen 443 ssl http2;
    server_name file-rocket.top www.file-rocket.top;
    
    # SSL 证书配置
    ssl_certificate /path/to/your/certificate.crt;
    ssl_certificate_key /path/to/your/private.key;
    
    # SSL 优化
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;
    
    # HTTP/2 优化
    http2_max_field_size 64k;
    http2_max_header_size 512k;
    
    # 其他配置与 HTTP 相同
    location / {
        proxy_pass http://localhost:3000;
        
        # 性能优化配置（同上）
        client_max_body_size 10G;
        client_body_buffer_size 128M;
        proxy_buffer_size 128k;
        proxy_buffers 16 128k;
        proxy_busy_buffers_size 256k;
        client_body_timeout 600s;
        proxy_connect_timeout 600s;
        proxy_send_timeout 600s;
        proxy_read_timeout 600s;
        send_timeout 600s;
        proxy_request_buffering off;
        tcp_nodelay on;
        tcp_nopush on;
        
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        
        proxy_cache_bypass $http_upgrade;
        add_header Cache-Control "no-cache, no-store, must-revalidate";
        add_header Pragma "no-cache";
        add_header Expires "0";
    }
    
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
        proxy_pass http://localhost:3000;
        expires 1d;
        add_header Cache-Control "public, immutable";
        tcp_nodelay on;
        tcp_nopush on;
    }
    
    location /health {
        proxy_pass http://localhost:3000/health;
        access_log off;
    }
}

# ===== 全局性能优化 =====
# 将以下配置添加到 nginx.conf 的 http 块中

# 1. 工作进程优化
# worker_processes auto;
# worker_rlimit_nofile 65535;

# events {
#     worker_connections 10000;
#     use epoll;
#     multi_accept on;
# }

# 2. 文件缓存优化
# open_file_cache max=10000 inactive=30s;
# open_file_cache_valid 60s;
# open_file_cache_min_uses 2;
# open_file_cache_errors on;

# 3. 连接优化
# keepalive_timeout 65;
# keepalive_requests 1000;
# reset_timedout_connection on;

# 4. 发送文件优化
# sendfile on;
# sendfile_max_chunk 512k;
# tcp_nopush on;
# tcp_nodelay on;

# 5. 日志优化（减少磁盘 I/O）
# access_log /var/log/nginx/access.log combined buffer=32k flush=5s;
# error_log /var/log/nginx/error.log warn;

# 6. Gzip 压缩（可选，对大文件传输可能不需要）
# gzip on;
# gzip_vary on;
# gzip_comp_level 6;
# gzip_types text/plain text/css text/xml text/javascript application/json application/javascript application/xml+rss application/rss+xml font/truetype font/opentype application/vnd.ms-fontobject image/svg+xml;
# gzip_disable "msie6";

# 7. 限流配置（防止滥用）
